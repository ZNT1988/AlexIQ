{
  "name": "hustle-finder-ia",
  "version": "3.0.1",
  "type": "module",
  "main": "index-ultra-minimal.js",
  "engines": {
    "node": ">=18.17"
  },
  "scripts": {
    "dev": "node index-ultra-minimal.js",
    "build": "cd frontend && npm ci && npm run build",
    "build:railway": "echo 'Frontend build skipped in Railway - backend only deployment' && exit 0",
    "start": "node railway-start.js",
    "guard:scan": "node tools/anti-fake-scan.mjs backend",
    "precommit": "npm run guard:scan && npx eslint backend",
    "audit:batch": "node tools/batch-audit.mjs --dir=backend --start=0 --limit=10",
    "audit:next10": "node -e \"const fs=require('fs');const a=fs.readFileSync('reports/.cursor','utf8').catch(()=>'0')||'0';const s=parseInt(a,10);const n=s+10;console.log('batch',s,'..',n-1);require('child_process').spawnSync(process.execPath,['tools/batch-audit.mjs',`--dir=backend`,`--start=${s}`,`--limit=10`],{stdio:'inherit'});fs.writeFileSync('reports/.cursor',String(n));\"",
    "fix:safe": "node tools/safe-fixes.mjs"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "@vercel/speed-insights": "^1.2.0",
    "dotenv": "^17.2.1",
    "express": "^4.19.2",
    "openai": "^4.77.0",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0",
    "vite": "^7.1.3",
    "winston": "^3.14.2"
  }
}
