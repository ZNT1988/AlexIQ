# ü¶Ñ ALEX LICORNE - Dockerfile Production
FROM node:18-alpine

# M√©tadonn√©es
LABEL maintainer="HustleFinder IA Team"
LABEL version="1.0.0-licorne"
LABEL description="Alex Licorne - Syst√®me IA complet multi-tenant"

# Variables d'environnement
ENV NODE_ENV=production
ENV PORT=3001
ENV DB_PATH=/app/data/hustlefinder.sqlite

# Installation des d√©pendances syst√®me
RUN apk add --no-cache \
    sqlite \
    curl \
    ca-certificates \
    tzdata

# Cr√©ation utilisateur non-root
RUN addgroup -g 1001 -S alexuser && \
    adduser -S alexuser -u 1001

# R√©pertoire de travail
WORKDIR /app

# Copie des fichiers de d√©pendances
COPY package*.json ./
COPY backend/package*.json ./backend/

# Installation des d√©pendances Node.js
RUN npm ci --only=production && \
    npm cache clean --force

# Copie du code source
COPY . .

# Cr√©ation des r√©pertoires de donn√©es
RUN mkdir -p /app/data /app/logs /app/backups && \
    chown -R alexuser:alexuser /app

# Permissions
RUN chmod +x start-alex-licorne.js

# Port expos√©
EXPOSE 3001

# Switch vers utilisateur non-root
USER alexuser

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:3001/api/health || exit 1

# Point d'entr√©e
CMD ["node", "start-alex-licorne.js"]